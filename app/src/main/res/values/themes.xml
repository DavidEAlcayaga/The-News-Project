<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.TheNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:windowLightStatusBar">false</item>
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/ColorPrimary</item>
    <item name="colorPrimaryVariant">@color/ColorPrimaryVariant</item>
    <item name="colorOnPrimary">@color/ColorPrimaryAccent</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/ColorSecondary</item>
    <item name="colorSecondaryVariant">@color/ColorSecondaryVariant</item>
    <item name="colorOnSecondary">@color/ColorSecondaryAccent</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>

    <item name="android:windowBackground" tools:targetApi="l">@color/windowBackground</item>
    <item name="android:navigationBarColor" tools:targetApi="l">@color/navigationBarColor</item>
  </style>

</resources>