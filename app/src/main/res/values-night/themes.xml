<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.TheNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="android:windowLightStatusBar">false</item>
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_400</item>
    <item name="colorPrimaryVariant">@color/purple_600</item>
    <item name="colorOnPrimary">@color/purple_800</item>
    <!-- Secondary brand color. -->
    <item name="colorPrimaryDark">@color/ColorSecondary</item>
    <item name="colorSecondary">@color/ColorSecondaryVariant</item>
    <item name="colorOnSecondary">@color/ColorSecondaryAccent</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor_Night</item>
    <item name="android:windowBackground" tools:targetApi="l">@color/windowBackground_Night</item>
    <item name="android:navigationBarColor" tools:targetApi="l">@color/navigationBarColor_Night</item>
  </style>
</resources>